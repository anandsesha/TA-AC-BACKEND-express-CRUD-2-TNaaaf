<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=1.0, initial-scale=1.0" />
    <title>List all Articles</title>
  </head>
  <body>
    <h1>List of Articles</h1>
    <% if(allArticlesArray.length) { %>

    <ul>
      <% allArticlesArray.forEach(article => { %>
      <a href="/articles/<%= article.id %>">
        <li><%= article.title %></li>
      </a>
      <% }) %>
    </ul>

    <% } else { %>
    <h5>No articles Present</h5>
    <% } %>

    <a href="/">
      <button>Home</button>
    </a>
    <a href="/articles">
      <button>Go to Articles</button>
    </a>
    <a href="">
      <button>Edit</button>
    </a>
    <a href="">
      <button>Delete</button>
    </a>
  </body>
</html>
